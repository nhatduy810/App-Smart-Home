<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud"
    tools:context=".Outside">

    <RelativeLayout
        android:id="@+id/bar_out"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-16dp">

        <ImageView
            android:id="@+id/btn_back_main"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:onClick="backMain4"
            android:src="@drawable/back"
            tools:ignore="OnClick" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="  NGOÀI TRỜI"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_out"
        android:layout_width="0dp"
        android:layout_marginTop="70dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/bar_out"
        app:layout_constraintTop_toBottomOf="@+id/bar_out"
        android:background="@drawable/bgliv_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.07">

        <ImageView
            android:id="@+id/clothes_out"
            android:layout_width="142dp"
            android:layout_height="147dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="64dp"
            android:src="@drawable/clothes" />

        <Button
            android:id="@+id/btn_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="68dp"
            android:background="#FFC107"
            android:text="Out" />

        <Button
            android:id="@+id/btn_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_in"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="34dp"
            android:background="#2196F3"
            android:text="In"></Button>

        <ImageView
            android:id="@+id/weather_out"
            android:layout_width="154dp"
            android:layout_height="130dp"
            android:layout_below="@+id/clothes_out"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="38dp"
            android:src="@drawable/weather" />

        <Button
            android:id="@+id/btn_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_out"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="97dp"
            android:text="Bật"></Button>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="394dp"
            android:background="@drawable/location_bg">

            <CheckBox
                android:id="@+id/hanoi"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Hà Nội"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/pleiku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="230dp"
                android:text="Pleiku"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/hochiminh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="60dp"
                android:text="Hồ Chí Minh"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/danang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="60dp"
                android:text="Đà Nẵng"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/halong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="120dp"
                android:text="Hạ Long"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/hue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="120dp"
                android:text="Huế"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/cantho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="180dp"
                android:text="Cần Thơ"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/nhatrang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="180dp"
                android:text="Nha Trang"
                android:textSize="20dp" />
        </RelativeLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>